{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "eol-last": ["error", "always"],
    "semi": ["error", "always"],
    "camelcase": "error",
    "no-unused-vars": "error",
    "init-declarations": 2
  },
  "ignorePatterns": ["dist/"]
}
